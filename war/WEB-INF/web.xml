<?xml version="1.0" encoding="UTF-8"?>
<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>SocialGraphExplorer.html</welcome-file>
  </welcome-file-list>

  <!-- Servlets -->
  <servlet>
    <servlet-name>persons</servlet-name>
    <servlet-class>people.server.PersonServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>persons</servlet-name>
    <url-pattern>/socialgraphexplorer/persons</url-pattern>
  </servlet-mapping>

</web-app>